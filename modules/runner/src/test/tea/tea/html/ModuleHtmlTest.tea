tunit-testsuite url-encode-test {

    tunit-test urlEncodeOk {
        tunit-assert-equals "Hello%2C+world" [url-encode "Hello, world"]
        tunit-assert-equals "100" [url-encode 100]
        tunit-assert-equals "3.14" [url-encode 3.14]
    }

    tunit-test-error tooFewArgs {
        url-encode
    }

    tunit-test-error tooManyArgs {
       url-encode "1" "2"
    }

    tunit-test-error invalidArgType {
        url-encode $null
    }

}