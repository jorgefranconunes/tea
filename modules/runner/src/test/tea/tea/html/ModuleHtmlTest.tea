tunit-testsuite html-encode-test {

    tunit-test htmlEncodeOk {
        tunit-assert-equals "Hello,&lt;world&gt;" [html-encode "Hello,<world>"]
        tunit-assert-equals "100" [html-encode 100]
        tunit-assert-equals "3.14" [html-encode 3.14]
    }

    tunit-test-error tooFewArgs {
        html-encode
    }

    tunit-test-error tooManyArgs {
        html-encode "1" "2"
    }

    tunit-test-error invalidArgType {
        html-encode $null
    }

}





