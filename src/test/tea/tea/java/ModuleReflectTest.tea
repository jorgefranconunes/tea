tunit-testsuite java-get-method-test {

    
    
    
    
    tunit-test allOk {
        
        define f [java-get-method java.lang.String valueOf int]
        define s [$f 4]
        
        tunit-assert-equals "4" $s
    }

    
    
    
    
    tunit-test-error instanceMethod {
        
        define f [java-get-method java.lang.String length]
        define s [$f]
        
        # We should not get here...
        
        tunit-fail "Calling instance method as static validation failure"
    }

    
    
    
    
    tunit-test-error illegalArguments {
        
        define f [java-get-method java.lang.String valueOf int]
        define s [$f "4"]
        
        # We should not get here...
        
        tunit-fail "Illegal argument validation failure"
    }

}





