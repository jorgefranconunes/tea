tunit-testsuit str-lower-test {

    tunit-test LowerOk {
        tunit-assert-equals "hello" [str-lower "HELLO"]
    }

    tunit-test-error TooFewArgs {
        str-lower
    }

    tunit-test-error TooManyArgs {
        str-lower "too" "many" "args"
    }

    tunit-test-error InvalidArgType {
        str-lower 1
    }

}





