tunit-testsuit str-upper-test {

    tunit-test UpperOk {
        tunit-assert-equals "HELLO" [str-upper "hello"] 
    }

    tunit-test-error TooFewArgs {
        str-upper
    }

    tunit-test-error TooManyArgs {
        str-upper "too" "many" "args"
    }

    tunit-test-error InvalidArgType {
        str-upper 1
    }

}





