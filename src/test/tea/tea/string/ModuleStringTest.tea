tunit-testsuite str-fmt-test {

    tunit-test fmtOk {
        tunit-assert-equals "Hello" [str-fmt "Hello"]
    }

    tunit-test-error tooFewArgs {
        str-fmt
    }

    tunit-test-error invalidArgType {
        str-fmt 1
    }

}





