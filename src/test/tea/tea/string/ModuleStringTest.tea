tunit-testsuite str-printf-test {

    tunit-test printfOk {
        tunit-assert-equals "Hello" [str-printf "Hello"]
    }

    tunit-test-error tooFewArgs {
        str-printf
    }

    tunit-test-error invalidArgType {
        str-printf 1
    }

}





