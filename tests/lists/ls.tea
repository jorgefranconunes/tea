# Lists the files in the directories given as arguments sorted
# alphabetically.
#
#
# Revisions:
#
# 2009/03/11 Created. (jfn)
#
###########################################################################

import "tea/lists/lists.tea"





#########################################################################
#
# 
#
#########################################################################

define dirList $argv

if { empty? $dirList } {
    set! dirList ( "." )
}

define listDir        [lambda (d) { glob $d ".*" }]
define fileList       [apply list-cat [map $listDir $dirList]]
define sortedFileList [list-sort $fileList $str-cmp]

map echo $sortedFileList





